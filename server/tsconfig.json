{
  "compilerOptions": {
    "target": "ES6",                                  // Specifies the output language level
    "module": "commonjs",                             // Specifies the module code generation
    "outDir": "build",                                 // Redirects output structure to the build directory
    "rootDir": "src",                                  // Specifies the root directory of input files
    "strict": true,                                    // Enables all strict type-checking options
    "esModuleInterop": true,                           // Enables interoperability between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true,              // Allows default imports from modules with no default export
    "moduleResolution": "node",                        // Specifies module resolution strategy
    "forceConsistentCasingInFileNames": true,          // Ensures consistent casing in imports
    "skipLibCheck": true,                              // Skips type checking of declaration files
    "sourceMap": true,                                 // Generates corresponding '.map' files
    "resolveJsonModule": true,                         // Allows importing JSON modules
    "isolatedModules": true,                           // Ensures that each file is treated as a separate module
    "noEmit": false,                                   // Allows emitting files (ensure this is false if you want to compile)
    "experimentalDecorators": true,                    // Enables experimental support for decorators (if you're using them)
    "emitDecoratorMetadata": true                      // Emits design-type metadata for decorated declarations (if using decorators)
  },
  "include": ["src/**/*"],                             // Specifies the files to include in the compilation
  "exclude": ["node_modules", "build"]                 // Specifies the files to exclude from the compilation
}
